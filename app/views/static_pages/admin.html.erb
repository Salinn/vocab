<%= form_tag user_add_role_path(controller: :users, action: :add_role) do %>
    <%= collection_select :user, :user_id, User.all, :id, :name_and_email %>
    <%= collection_select :user, :role, Role::CONSTANTROLES, :to_s, :to_s %>
    <%= submit_tag "Add Role" %>
<% end %>

<%= form_tag user_remove_role_path(controller: :users, action: :remove_role) do %>
    <%= collection_select :user, :user_id, User.all, :id, :name_and_email %>
    <%= collection_select :user, :role, Role::CONSTANTROLES, :to_s, :to_s %>
    <%= submit_tag "Remove Role" %>
<% end %>