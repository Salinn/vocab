<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table>
  <thead>
    <tr>
      <th>Lesson module</th>
      <th>Lesson word</th>
      <th>Correct choice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.lesson_module %></td>
        <td><%= question.lesson_word %></td>
        <td><%= question.correct_choice %></td>
        <% if can?(:manage, question) %>
          <td><%= link_to 'Show', course_lesson_lesson_module_question_path(question, lesson_module_id: question.lesson_module.id, lesson_id: question.lesson_module.lesson.id, course_id: question.lesson_module.lesson.course.id) %></td>
          <td><%= link_to 'Edit', edit_course_lesson_lesson_module_question_path(question, lesson_module_id: question.lesson_module.id, lesson_id: question.lesson_module.lesson.id, course_id: question.lesson_module.lesson.course.id) %></td>
          <td><%= link_to 'Destroy', course_lesson_lesson_module_question_path(question, lesson_module_id: question.lesson_module.id, lesson_id: question.lesson_module.lesson.id, course_id: question.lesson_module.lesson.course.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can?(:create, Question) %>
  <%= link_to 'New Question', new_course_lesson_lesson_module_question_path(lesson_module_id: @lesson_module.id, lesson_id: @lesson_module.lesson.id, course_id: @lesson_module.lesson.course.id) %>
<% end %>