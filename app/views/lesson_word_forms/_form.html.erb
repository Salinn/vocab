<% lesson_word_form = LessonWordForm.new %>
<%= form_for(lesson_word_form, url: course_lesson_lesson_word_lesson_word_forms_path(course_id: @course.id, lesson_id: @lesson.id, lesson_word_id: @lesson_word), remote: true, :html => { :role => "form" }) do |f| %>
    <div class="field">
      <%= f.hidden_field :lesson_word_id, value: lesson_word.id %>
    </div>
    <div class="field">
      <%= f.label :word_form_id %><br>
      <%= f.collection_select :word_form_id, lesson_word.not_word_forms, :id, :associated_word, { prompt: "Please select" }, class: "input-sm" %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
    </div>
<% end %>
