<!DOCTYPE html>
<html>
<head>
  <title>Vocab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<%= render 'layouts/header' %>

<body>

<div class="container">
  <% flash.each do |name, msg| %>
      <% if name == :alert %>
          <%= content_tag :div, msg, class: "alert alert-info" %>
      <% else %>
          <%= content_tag :div, msg, class: "alert notice-info" %>
      <% end %>
  <% end %>
</div>

<% if controller.controller_name == 'courses' && action_name != 'new' && action_name != 'index' %>
    <div class="sidebar">
      <%= render 'layouts/sidebar' %>
    </div>
<% end %>

<div class="row">
  <%= yield %>
</div>


<div id="footer">
  <%= render 'layouts/footer' %>
</div>

</body>

</html>
