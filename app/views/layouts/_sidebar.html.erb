<!--http://bootsnipp.com/snippets/featured/navigation-sidebar-with-toggle-->
<div id="wrapper">
  <div id="sidebar-wrapper">
    <ul id="sidebar_menu" class="sidebar-nav">
      <li class="sidebar-brand"><a id="menu-toggle" href="#">Vocab<span id="main_icon" class="glyphicon glyphicon-align-justify"></span></a></li>
    </ul>
    <ul class="sidebar-nav" id="sidebar">
      <%= render 'layouts/sidebar_static' %>
      <% if @course && !@course.id.nil? %>
          <%= render 'layouts/sidebar_course' %>
      <% end %>
      <!-- signin and signout -->
      <% if current_user %>
          <li>
            <%= link_to 'Sign Out <i class="sub_icon glyphicon glyphicon-log-out"></i>'.html_safe, destroy_user_session_path, method: :delete %>
          </li>
      <% end %>
    </ul>
  </div>
</div>
