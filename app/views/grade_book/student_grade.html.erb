<div class="col-xl-12 col-md-12 col-sm-12 col-xs-12 home-page-card-opacity">
  <div class="jumbotron">
    <div class="col-xl-12 col-md-12 col-xs-12">
      <h2><%= @user.name %> -- <%= @course.class_name %></h2>
      <% @course.lessons.each do |lesson| %>
          <div class="panel-group">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" href="#collapse<%= lesson.id %>"><%= lesson.lesson_name %></a>
                </h4>
              </div>
              <div id="collapse<%= lesson.id %>" class="panel-collapse collapse">
                <% lesson.lesson_modules.each do |lesson_module| %>
                    <div class="panel-group">
                      <div class="panel panel-default">
                      <div class="panel-heading">
                        <h4 class="panel-title">
                          <a data-toggle="collapse" href="#collapse<%= lesson.id %>-<%= lesson_module.id %>"><%= lesson_module.name %></a>
                        </h4>
                      </div>
                      <div id="collapse<%= lesson.id %>-<%= lesson_module.id %>" class="panel-collapse collapse">
                        <% lesson_module.questions.each do |question| %>
                            <div class="panel-group">
                              <div class="panel panel-default">
                                <div class="panel-heading">
                                  <h4 class="panel-title">
                                    <a data-toggle="collapse" href="#collapse<%= lesson.id %>-<%= lesson_module.id %>-<%= question.id %>"><%= question.question_string %></a>
                                  </h4>
                                </div>
                                <div id="collapse<%= lesson.id %>-<%= lesson_module.id %>-<%= question.id %>" class="panel-collapse collapse">
                                  <div class="panel-body">Panel Body</div>
                                </div>
                              </div>
                            </div>
                        <% end %>
                      </div>
                    </div>
                    </div>
                <% end %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
</div>