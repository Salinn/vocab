<h1>Listing Root Words</h1>
<%= search_form_for @search, url: word_roots_path, class: "col-xs-12" do |f| %>
    <div class="field form-group col-sm-12">
      <div class="col-sm-6">
          <label class='control-label'>Search By Root Name</label>
          <%= f.text_field :root_name_cont, placeholder: 'Syn' , class:'form-control' %>
      </div>
      <div class="col-sm-6">
          <label class='control-label'>Search By Root Definition</label>
          <%= f.text_field :root_definition_cont, placeholder: 'with or together', class:'form-control'  %>
      </div>
    </div>

    <div>
      <%= link_to 'New Root Word', new_word_root_path, remote: true, class:'btn btn-primary col-sm-3' %>
    </div>

    <div class="actions btn-group col-sm-offset-4">
        <%= f.submit "Search Roots" , class:'btn btn-primary'%>
        <%= link_to 'Clear Search', word_roots_path , class:'btn btn-primary' %>
    </div>
<% end %>

<%= will_paginate @word_roots, renderer: BootstrapPagination::Rails %>

<table class="table">
  <thead>
    <tr>
      <th><%= sort_link @search, :root_name, 'Root name' %></th>
      <th><%= sort_link @search, :root_definition, 'Root definition' %></th>
    </tr>
  </thead>

  <tbody id="word_roots">
    <% @word_roots.each do |word_root| %>
      <%= render 'word_root_row', word_root: word_root %>
    <% end %>
  </tbody>
</table>

<%= render 'layouts/dialog' %>
