<p id="notice"><%= notice %></p>

<h1>Listing Word Roots</h1>

<table>
  <thead>
    <tr>
      <th>Root name</th>
      <th>Root definition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_roots.each do |word_root| %>
      <tr>
        <td><%= word_root.root_name %></td>
        <td><%= word_root.root_definition %></td>
        <td><%= link_to 'Show', word_root %></td>
        <td><%= link_to 'Edit', edit_word_root_path(word_root) %></td>
        <td><%= link_to 'Destroy', word_root, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

