<h1>Words</h1>
  <%= search_form_for @search, url: words_path, class: "col-sm-12 form-inline" do |f| %>
    <%= f.condition_fields do |c| %>
        <%= render "condition_fields", f: c %>
    <% end %>
    <%= link_to_add_fields "Add Condition", f, :condition %>
    </br>
    <div class="actions btn-group col-sm-12">
      <%= f.submit "Search" , class:"btn btn-primary"%>
      <%= link_to 'Clear Search', words_path ,class:"btn btn-primary" %>
    </div>

  <% end %>


  <table class="table">
    <thead>
      <tr>
        <th><%= sort_link @search, :name,'Word name' %></th>
        <th>Display the Word</th>
        <th>Update a Word</th>
      </tr>
    </thead>

    <tbody>
      <% @words.each do |word| %>
        <tr>
          <td><%= word.name %></td>
          <td><%= link_to 'Show', word %></td>
          <td><%= link_to 'Update', edit_word_path(word) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'New Word', new_word_path , class:'btn btn-primary'%>
