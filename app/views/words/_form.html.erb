
<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for(@word, remote: remote, html: {role: :form, 'data-model' => 'word'}) do |f| %>

  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
      <% @word.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name, class: 'control-label' %><br>
    <%= f.text_field :name , class:"form-control"%>
    <span class="help-block"></span>
  </div>

  <div class="actions">
    <%= f.submit 'Create Word', :onclick => "javascript:window.location.reload()" , class: 'btn btn-primary' %>
  </div>
<% end %>
