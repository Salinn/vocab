<div class="word_composition">

  <h3>
  <strong>Word:</strong>
  <%= @word.name %>
  </h3>

  </br>

  <!-- Word Forms -->

  <% if @word.word_forms.length > 0 %>

    <h3>Word Forms</h3>
    <table class="table">
      <thead>
      <tr>
        <th>Word form</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody id="word_form">

      <% @word.word_forms.each do |word_form| %>
          <%= render 'word_forms/word_form_row', word_form: word_form %>
      <% end %>

      </tbody>
    </table>
  <% else %>
    <h3>There are no Word Forms in the dictionary for this word</h3>
  <% end %>
  <%= link_to 'New Word Form', new_word_form_path(word_id: @word.id), remote: true, class:'btn btn-primary col-sm-3 ' %>
  </br>

  <!-- Word sentences -->

  <% if @word.sentences.length > 0 %>
  <h3>Sentences</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Word sentence</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody id="word_sentence">

    <% @word.sentences.each do |sentence| %>
        <%= render 'sentences/sentence_row', sentence: sentence %>
    <% end %>

    </tbody>

  </table>
  <% else %>
      <h3>There are no Sentences in the dictionary for this word</h3>
  <% end %>
  <%= link_to 'New Sentence', new_sentence_path(word_id: @word.id), remote: true, class:'btn btn-primary col-sm-3 ' %>
  </br>

  <!-- Word synonyms -->

  <% if @word.synonyms.length > 0 %>
  <h3>Synonyms</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Word Synonym</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="word_synonym">
    <% @word.synonyms.each do |synonym| %>
        <%= render 'synonyms/synonym_row', synonym: synonym %>
    <% end %>
    </tbody>

  </table>
  <% else %>
      <h3>There are no Synonyms in the dictionary for this word</h3>
  <% end %>
  <%= link_to 'New Synonym', new_synonym_path(word_id: @word.id), remote: true, class:'btn btn-primary col-sm-3 ' %>
  </br>

  <!-- Word definitions -->

  <% if @word.definitions.length > 0 %>
  <h3>Definitions</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Word definition</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody id="word_definition">
    <% @word.definitions.each do |definition| %>
        <%= render 'definitions/definition_row', definition: definition %>
    <% end %>
    </tbody>

  </table>
  <% else %>
    <h3>There are no Definitions in the dictionary for this word</h3>
  <% end %>
  <%= link_to 'New Definition', new_definition_path(word_id: @word.id), remote: true, class:'btn btn-primary col-sm-3 ' %>
  </br>

  <!-- Word videos -->

  <% if @word.word_videos.length > 0 %>
  <h3>Word video</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Word video</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody id="word_video">
    <% @word.word_videos.each do |word_video| %>
        <%= render 'word_videos/video_row', word_video: word_video %>
    <% end %>
    </tbody>
  </table>
  <% else %>
    <h3>There are no Word Videos in the dictionary for this word</h3>
  <% end %>
  <%= link_to 'New Word Video', new_word_video_path(word_id: @word.id), remote: true, class:'btn btn-primary col-sm-3 ' %>
  </br>

  <!-- Word Roots-->
  <% if @word.word_roots.length > 0 %>
  <h3>Word roots</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Word root</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @word.word_roots.each do |word_root| %>
        <tr>
          <td><%= word_root.root_name %></td>
          <td><%= link_to 'Show', word_root %></td>
          <td><%= link_to 'Edit', edit_word_root_path(word_root) %></td>
          <td><%= link_to 'Destroy', word_root, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <% else %>
      <h3>There are no Word Roots in the dictionary for this word</h3>
  <% end %>


</div>

