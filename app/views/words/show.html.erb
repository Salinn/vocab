<div class="word_composition">

  <h3>
  <strong>Word:</strong>
  <%= @word.name %>
  </h3>

  </br>

  <!-- Word Forms -->

  <% if @word.word_forms.length > 0 %>

    <h3>Word Forms</h3>
    <table class="table">
      <thead>
      <tr>
        <th>Word form</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody id="word_form">

      <% @word.word_forms.each do |word_form| %>
          <%= render 'word_form_row', word_form: word_form %>
      <% end %>

      </tbody>
    </table>
  <% else %>
    <h3>There are no Word Forms in the dictionary for this word</h3>
  <% end %>
  <%= link_to 'New Word Form', new_word_form_path, remote: true,  class:'btn btn-primary col-sm-3 ' %>
  </br>

  <!-- Word sentences -->

  <% if @word.sentences.length > 0 %>
  <h3>Sentences</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Word sentence</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @word.sentences.each do |sentence| %>
        <tr>
          <td><%=sentence.word_sentence %></td>
          <td><%= link_to 'Show', sentence %></td>
          <td><%= link_to 'Edit', edit_sentence_path(sentence) %></td>
          <td><%= link_to 'Destroy', sentence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    </tbody>
  </table>
  <% else %>
      <h3>There are no Sentences in the dictionary for this word</h3>
  <% end %>
  </br>

  <!-- Word synonyms -->

  <% if @word.synonyms.length > 0 %>
  <h3>Synonyms</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Word Synonym</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @word.synonyms.each do |synonym| %>
        <tr>
          <td><%=synonym.word_synonym %></td>
          <td><%= link_to 'Show', synonym %></td>
          <td><%= link_to 'Edit', edit_synonym_path(synonym) %></td>
          <td><%= link_to 'Destroy', synonym, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    </tbody>
  </table>
  <% else %>
      <h3>There are no Synonyms in the dictionary for this word</h3>
  <% end %>
  </br>

  <!-- Word definitions -->

  <% if @word.definitions.length > 0 %>
  <h3>Definitions</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Word definition</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @word.definitions.each do |definition| %>
        <tr>
          <td><%=definition.word_definition %></td>
          <td><%= link_to 'Show', definition %></td>
          <td><%= link_to 'Edit', edit_definition_path(definition) %></td>
          <td><%= link_to 'Destroy', definition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <% else %>
    <h3>There are no Definitions in the dictionary for this word</h3>
  <% end %>
  </br>

  <!-- Word videos -->

  <% if @word.word_videos.length > 0 %>
  <h3>Word video</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Word video</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @word.word_videos.each do |word_video| %>
        <tr>
          <td><%= word_video.video_description %></td>
          <td><%= word_video.video_link %></td>
          <td><%= link_to 'Show', word_video %></td>
          <td><%= link_to 'Edit', edit_word_video_path(word_video) %></td>
          <td><%= link_to 'Destroy', word_video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <% else %>
    <h3>There are no Word Videos in the dictionary for this word</h3>
  <% end %>
  </br>

  <!-- Word Roots-->
  <% if @word.word_roots.length > 0 %>
  <h3>Word roots</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Word root</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @word.word_roots.each do |word_root| %>
        <tr>
          <td><%= word_root.root_name %></td>
          <td><%= link_to 'Show', word_root %></td>
          <td><%= link_to 'Edit', edit_word_root_path(word_root) %></td>
          <td><%= link_to 'Destroy', word_root, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <% else %>
      <h3>There are no Word Roots in the dictionary for this word</h3>
  <% end %>


</div>

