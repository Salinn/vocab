<p id="notice"><%= notice %></p>

<h1>Listing Word Forms</h1>

<table>
  <thead>
    <tr>
      <th>Associated word</th>
      <th>Word</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_forms.each do |word_form| %>
      <tr>
        <td><%= word_form.associated_word %></td>
        <td><%= word_form.word %></td>
        <td><%= link_to 'Show', word_form %></td>
        <td><%= link_to 'Edit', edit_word_form_path(word_form) %></td>
        <td><%= link_to 'Destroy', word_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

