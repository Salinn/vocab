<%= form_for(@lesson_word) do |f| %>
    <%= f.fields_for :lesson_word_synonyms, @lesson_word.lesson_word_synonyms.last do |synonym| %>
        <div class="field">
          <%= synonym.label :lesson_word %><br>
          <%= synonym.hidden_field :lesson_word, value: @lesson_word %>
        </div>
        <div class="field">
          <%= synonym.label :synonym %><br>
          <%= synonym.collection_select :synonym_id, @lesson_word.not_word_synonyms, :id, :word_synonym %>
        </div>
    <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
